    <script>
      
        //更新左上角用户信息
        userMessage();
        var category = window.location.search;
        var cateval = category.substring(category.lastIndexOf('=') + 1, category.length);
        if (cateval !== "") {
            var xhr = new XMLHttpRequest();
            xhr.open('GET', "/Device/GetDeviceParameterInfo?DeviceId=" + cateval);
            //xhr.setRequestHeader('content-Type', 'application/x-www-form-urlencoded');
            xhr.send();//多发一个id数据
            xhr.onreadystatechange = function () {
                if (this.readyState !== 4) return;
                var deviceInfos = eval("(" + this.responseText + ")");//JSON.parse安全

                $('input[name="设备ID"]').val(deviceInfos.deviceParameter.deviceId);
                if (deviceInfos.deviceParameter.StatusFlag === "关机中")
                    $('input[name="运行状态"]').val("关机中");
                else if (deviceInfos.deviceParameter.StatusFlag === "运行中")
                    $('input[name="运行状态"]').val("运行中");
                else if (deviceInfos.deviceParameter.StatusFlag === "暂停中")
                    $('input[name="运行状态"]').val("暂停中");
                else if (deviceInfos.deviceParameter.StatusFlag === "故障中")
                    $('input[name="运行状态"]').val("故障中");
                else if (deviceInfos.deviceParameter.StatusFlag === "未连接")
                    $('input[name="运行状态"]').val("未连接");
                //解析时间
                //var StartTime = (eval(deviceInfos.deviceParameter.StartTime.replace(/\/Date\((\d+)\)\//gi, "new Date($1)"))).pattern("yyyy-M-d HH:mm:ss");
                var RunTime = Math.round(deviceInfos.deviceParameter.RunTime.TotalHours * 100) / 100;
                if (deviceInfos.deviceParameter.StopTime !== null) {
                    var StopTime = (eval(deviceInfos.deviceParameter.StopTime.replace(/\/Date\((\d+)\)\//gi, "new Date($1)"))).pattern("yyyy-M-d HH:mm:ss");
                }
                $('input[name="运行时间"]').val(RunTime + ' 小时');
                $('input[name="停机时间"').val(StopTime);
                $('input[name="目标产量"').val(deviceInfos.deviceParameter.TargetOutput);
                //$('textarea[name="历史记录"]').val(deviceInfos.parameterHistory[0].NowOutput);
                //$('textarea[name="历史记录"]').val("无");
                $('p[name="单个进度"').text(deviceInfos.deviceParameter.SingleProgress + '%');
                $('p[name="整体进度"').text(Math.floor((deviceInfos.deviceParameter.NowOutput / deviceInfos.deviceParameter.TargetOutput) * 100) + '%');
                //处理时间
                var subTime = new Array(5);
                for (var i = 0; i < 5; i++) {
                    subTime[i] = (eval(deviceInfos.parameterHistory[i].SubTime.replace(/\/Date\((\d+)\)\//gi, "new Date($1)"))).pattern("HH:mm:ss");
                }
                    
                // 基于准备好的dom，初始化echarts实例
                var myChart = echarts.init(document.getElementById('table-line'));
                // 指定图表的配置项和数据
                var option = {
                    title: {
                        text: '手套机产量'
                    },
                    tooltip: {},
                    legend: {
                        data: ['产量']
                    },
                    xAxis: {
                        data: [subTime[0], subTime[1], subTime[2], subTime[3], subTime[4]]
                    },
                    yAxis: {},
                    series: [{
                        name: '产量',
                        type: 'line',
                        data: [deviceInfos.parameterHistory[0].NowOutput,
                            deviceInfos.parameterHistory[1].NowOutput,
                            deviceInfos.parameterHistory[2].NowOutput,
                            deviceInfos.parameterHistory[3].NowOutput,
                            deviceInfos.parameterHistory[4].NowOutput]
                    }]
                };
                // 使用刚指定的配置项和数据显示图表。
                myChart.setOption(option);
            };
        }
    </script>
